<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_3"
    android:padding="@dimen/padding_2">
    <android.support.v7.widget.CardView
        android:id="@+id/view2"
        app:cardCornerRadius="20dp"
        style="@style/circle_thumbnail">
        <ImageView
            android:id="@+id/imgView_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/europa_leauge" />

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/text_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/spacing_2">
        <TextView
            android:id="@+id/list_item_primary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryLight"
            android:text="Neque porro quisquam est qui dolorem"
            android:textSize="@dimen/font_medium_large"/>
        <TextView
            android:id="@+id/list_item_secondary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorSecondaryDark"
            android:text="Neque porro quisquam est qui dolorem"
            android:layout_below="@id/list_item_primary_text"
            android:textSize="@dimen/font_medium"/>
    </RelativeLayout>




</RelativeLayout>