<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffeeeeee"
    android:paddingLeft="@dimen/screen_horizontal_padding"
    android:paddingRight="@dimen/screen_horizontal_padding"
    tools:context="com.tunghh.footballdata.views.CompetitionFragment">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_cards_league"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffeeeeee"
        tools:listitem="@layout/cardview_league">

    </android.support.v7.widget.RecyclerView>
</FrameLayout>
