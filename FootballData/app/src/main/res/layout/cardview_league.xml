<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_league"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    tools:ignore="UnusedAttribute">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/viewcard_background">
        <RelativeLayout
            android:id="@+id/thumbnail_layout"
            android:layout_width="match_parent"
            android:layout_height="165dp">
            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#B3E5FC"
                android:src="@drawable/default_league"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_league_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#81D4FA"
            android:paddingTop="@dimen/cardview_maintext_paddingTop"
            android:paddingLeft="@dimen/cardview_primary_text_boxPadding"
            android:paddingRight="@dimen/cardview_primary_text_boxPadding"
            android:paddingBottom="@dimen/cardview_primary_text_boxPadding"
            android:textAllCaps="true"
            android:text="League Name"
            android:layout_below="@id/thumbnail_layout"
            style="@style/CardView_PrimaryText" />
        <LinearLayout
            android:id="@+id/alternative_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/tv_league_name"
            android:paddingLeft="@dimen/cardview_primary_text_boxPadding"
            android:paddingRight="@dimen/cardview_primary_text_boxPadding"
            android:paddingBottom="@dimen/cardview_primary_text_boxPadding">
            <TextView
                android:id="@+id/tv_teams"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of teams"
                android:layout_marginTop="8dp"
                style="@style/cardview_secondarytext" />
            <TextView
                android:id="@+id/tv_matches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of match"
                android:layout_marginTop="8dp"
                style="@style/cardview_secondarytext"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/action_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/alternative_text"
            android:padding="@dimen/cardview_action_horizontal_spacing">
            <Button
                android:id="@+id/btn_fixture"
                android:text="Fixture"
                style="@style/cardview_button" />
            <Button
                android:id="@+id/btn_teams"
                android:text="Teams"
                style="@style/cardview_button" />
            <Button
                android:id="@+id/btn_table"
                android:text="Table"
                android:layout_marginLeft="0dp"
                style="@style/cardview_button" />
            <Button
                android:id="@+id/btn_standing"
                android:layout_width="48dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_format_list_numbered_black_24dp"
                android:backgroundTint="@color/colorAccent"
                style="@style/cardview_button" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lv_teams"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/action_frame">

        </LinearLayout>
        <TextView
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/action_frame"
            android:textColor="@color/textColorSecondaryDark"
            android:visibility="gone"
            android:text="Lorem ipsum dolor sit amet, cu sea probatus singulis, nostrum accusata scriptorem sea eu, ne sit laudem essent. Cum no magna animal adversarium, munere aperiri adipisci ex ius. An everti iudicabit suscipiantur sed. No nam tale tibique efficiendi, diam habeo tation ei nam. Diam mandamus mel eu, ei erat dignissim repudiandae vis. Eum ut option conceptam delicatissimi. Atomorum maiestatis vis ei."/>
    </RelativeLayout>

</android.support.v7.widget.CardView>