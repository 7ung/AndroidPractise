<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_league"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    tools:ignore="UnusedAttribute">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/viewcard_background">
        <RelativeLayout
            android:id="@+id/thumbnail_layout"
            android:layout_width="match_parent"
            android:layout_height="165dp">
            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/default_league"/>
            <TextView
                android:id="@+id/tv_league_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="League Name"
                style="@style/cardview_maintext" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/alternative_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/thumbnail_layout">
            <TextView
                android:id="@+id/tv_teams"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of teams"
                style="@style/cardview_secondarytext" />
            <TextView
                android:id="@+id/tv_matches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of match"
                android:paddingTop="8dp"
                style="@style/cardview_secondarytext"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/action_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/alternative_text"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/btn_fixture"
                android:text="Fixture"
                style="@style/cardview_button" />
            <Button
                android:id="@+id/btn_teams"
                android:text="Teams"
                style="@style/cardview_button" />
            <Button
                android:id="@+id/btn_table"
                android:text="Table"
                style="@style/cardview_button" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>